---

<footer class="relative bg-dark-950 text-dark-300 overflow-hidden">
  <!-- Gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-dark-900/50 to-transparent pointer-events-none"></div>

  <!-- Grid pattern -->
  <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg%20width%3D%2260%22%20height%3D%2260%22%20viewBox%3D%220%200%2060%2060%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3Cg%20fill%3D%22none%22%20fill-rule%3D%22evenodd%22%3E%3Cg%20stroke%3D%22%23ffffff%22%20stroke-width%3D%220.3%22%20stroke-opacity%3D%220.05%22%3E%3Cpath%20d%3D%22M60%200v60H0%22%2F%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E')] opacity-50"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Main footer content -->
    <div class="py-16 lg:py-20">
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8 lg:gap-10">
        <!-- Brand column -->
        <div class="col-span-2 md:col-span-3 lg:col-span-2">
          <a href="/" class="flex items-center gap-3 mb-6">
            <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-primary-700 rounded-xl flex items-center justify-center shadow-lg shadow-primary-500/20">
              <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 2L2 7l10 5 10-5-10-5z" />
                <path d="M2 17l10 5 10-5" />
                <path d="M2 12l10 5 10-5" />
              </svg>
            </div>
            <span class="font-bold text-xl text-white">Erold</span>
          </a>

          <p class="text-dark-400 text-sm leading-relaxed mb-6 max-w-sm">
            AI-Native Project Management for Developers. Let AI agents manage your tasks directly via MCP, API, and CLI.
          </p>

          <!-- Social links -->
          <div class="flex items-center gap-3">
            {socialLinks.map(social => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="w-9 h-9 flex items-center justify-center rounded-lg bg-dark-800/50 hover:bg-dark-700 text-dark-400 hover:text-white transition-all duration-300 hover:scale-105"
                aria-label={social.name}
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" set:html={social.icon} />
              </a>
            ))}
          </div>
        </div>

        <!-- Product links -->
        <div>
          <h4 class="font-semibold text-white text-sm mb-4">Product</h4>
          <ul class="space-y-3">
            {footerLinks.product.map(link => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-dark-400 hover:text-white transition-colors duration-200"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Developers links -->
        <div>
          <h4 class="font-semibold text-white text-sm mb-4">Developers</h4>
          <ul class="space-y-3">
            {footerLinks.developers.map(link => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-dark-400 hover:text-white transition-colors duration-200"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Resources links -->
        <div>
          <h4 class="font-semibold text-white text-sm mb-4">Resources</h4>
          <ul class="space-y-3">
            {footerLinks.resources.map(link => (
              <li>
                <a
                  href={link.href}
                  target={link.external ? '_blank' : undefined}
                  rel={link.external ? 'noopener noreferrer' : undefined}
                  class="text-sm text-dark-400 hover:text-white transition-colors duration-200 inline-flex items-center gap-1"
                >
                  {link.label}
                  {link.external && (
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  )}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Company links -->
        <div>
          <h4 class="font-semibold text-white text-sm mb-4">Company</h4>
          <ul class="space-y-3">
            {footerLinks.company.map(link => (
              <li>
                <a
                  href={link.href}
                  target={link.external ? '_blank' : undefined}
                  rel={link.external ? 'noopener noreferrer' : undefined}
                  class="text-sm text-dark-400 hover:text-white transition-colors duration-200 inline-flex items-center gap-1"
                >
                  {link.label}
                  {link.external && (
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  )}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>

    <!-- Newsletter section -->
    <div class="py-8 border-t border-dark-800">
      <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-6">
        <div>
          <h4 class="font-semibold text-white text-sm mb-1">Stay in the loop</h4>
          <p class="text-dark-400 text-sm">Get updates on new features and AI integrations.</p>
        </div>

        <form class="flex w-full md:w-auto gap-2" action="#" method="POST">
          <input
            type="email"
            placeholder="Enter your email"
            required
            class="flex-1 md:w-64 px-4 py-2.5 text-sm bg-dark-800/50 border border-dark-700 rounded-lg text-white placeholder:text-dark-500 focus:outline-none focus:ring-2 focus:ring-primary-500/50 focus:border-primary-500 transition-all duration-200"
          />
          <button
            type="submit"
            class="px-5 py-2.5 text-sm font-medium bg-primary-600 hover:bg-primary-500 text-white rounded-lg transition-colors duration-200 whitespace-nowrap"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="py-6 border-t border-dark-800 flex flex-col sm:flex-row items-center justify-between gap-4">
      <div class="text-dark-500 text-sm text-center sm:text-left">
        <p>&copy; {currentYear} <a href="https://yet.lu" target="_blank" rel="noopener" class="hover:text-dark-300 transition-colors">Yet Another Artificial Intelligence Company (SARL-S)</a></p>
        <p class="text-xs text-dark-600 mt-1">RCS Luxembourg B232060 | VAT LU36410809</p>
      </div>

      <div class="flex flex-wrap items-center justify-center sm:justify-end gap-4 sm:gap-6">
        <a href="/privacy" class="text-sm text-dark-500 hover:text-dark-300 transition-colors">
          Privacy
        </a>
        <a href="/terms" class="text-sm text-dark-500 hover:text-dark-300 transition-colors">
          Terms
        </a>
        <a href="/cookies" class="text-sm text-dark-500 hover:text-dark-300 transition-colors">
          Cookies
        </a>
        <a href="/imprint" class="text-sm text-dark-500 hover:text-dark-300 transition-colors">
          Imprint
        </a>
        <button
          onclick="window.openCookieSettings && window.openCookieSettings()"
          class="text-sm text-dark-500 hover:text-dark-300 transition-colors cursor-pointer"
        >
          Cookie Settings
        </button>
      </div>
    </div>
  </div>

  <!-- Decorative gradient orbs -->
  <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-primary-500/10 rounded-full blur-3xl pointer-events-none"></div>
  <div class="absolute -bottom-40 -right-40 w-80 h-80 bg-secondary-500/10 rounded-full blur-3xl pointer-events-none"></div>
</footer>
