import Footer from '../../components/Footer.astro';

const post = {
  title: 'What is MCP? A Developer\'s Guide to Model Context Protocol',
  excerpt: 'MCP (Model Context Protocol) is changing how AI assistants interact with external tools. Learn what it is, how it works, and why it matters for your development workflow.',
  date: '2025-01-10',
  readTime: '8 min read',
  category: 'AI Development',
  author: 'Erold Team',
};
---

<Layout
  title={`${post.title} - Erold Blog`}
  description={post.excerpt}
>
  <Header />

  <main class="pt-24 pb-20">
    <article class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <header class="mb-12">
        <div class="flex items-center gap-3 text-sm text-dark-500 mb-4">
          <a href="/blog" class="text-primary-600 hover:underline">Blog</a>
          <span>/</span>
          <span>{post.category}</span>
        </div>
