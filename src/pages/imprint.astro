---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const lastUpdated = "December 13, 2025";
---

<Layout
  title="Imprint - Yet.Project"
  description="Legal notice and imprint for Yet.Project - AI-Native Project Management. Company information as required by EU law."
>
  <Header />

  <main class="pt-24 pb-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Imprint</h1>
        <p class="text-gray-600">Legal Notice (Impressum) as required by EU and Luxembourg law</p>
        <p class="text-gray-500 text-sm mt-2">Last updated: {lastUpdated}</p>
      </div>

      <!-- Content -->
      <div class="space-y-10">

        <!-- Company Information -->
        <section>
          <h2 class="text-2xl font-semibold text-gray-900 mb-6">Company Information</h2>
          <div class="bg-gray-50 rounded-xl p-6 space-y-4">
            <div>
              <p class="text-sm text-gray-500 uppercase tracking-wider mb-1">Legal Name</p>
              <p class="text-lg font-semibold text-gray-900">Yet Another Artificial Intelligence Company (SARL-S)</p>
            </div>
            <div>
              <p class="text-sm text-gray-500 uppercase tracking-wider mb-1">Trading As</p>
              <p class="text-gray-900">Yet Technologies / Yet.lu</p>
            </div>
            <div>
              <p class="text-sm text-gray-500 uppercase tracking-wider mb-1">Legal Form</p>
              <p class="text-gray-900">SARL-S (Société à Responsabilité Limitée Simplifiée)</p>
              <p class="text-gray-600 text-sm">Simplified Private Limited Company under Luxembourg Law</p>
            </div>
          </div>
        </section>

        <!-- Registered Address -->
        <section>
          <h2 class="text-2xl font-semibold text-gray-900 mb-6">Registered Address</h2>
          <div class="bg-gray-50 rounded-xl p-6">
            <address class="not-italic text-gray-900">
              <p class="font-semibold">Yet Another Artificial Intelligence Company (SARL-S)</p>
              <p>15 Avenue Dr Klein</p>
              <p>5630 Mondorf-les-Bains</p>
              <p>Luxembourg</p>
            </address>
          </div>
        </section>

        <!-- Registration Details -->
        <section>
          <h2 class="text-2xl font-semibold text-gray-900 mb-6">Registration Details</h2>
          <div class="bg-gray-50 rounded-xl p-6 grid md:grid-cols-2 gap-6">
            <div>
              <p class="text-sm text-gray-500 uppercase tracking-wider mb-1">Trade Register</p>
              <p class="text-gray-900">RCS Luxembourg (Registre de Commerce et des Sociétés)</p>
            </div>
            <div>
              <p class="text-sm text-gray-500 uppercase tracking-wider mb-1">Registration Number</p>
              <p class="text-gray-900 font-mono">B232060</p>
            </div>
            <div>
              <p class="text-sm text-gray-500 uppercase tracking-wider mb-1">VAT Identification Number</p>
              <p class="text-gray-900 font-mono">LU36410809</p>
            </div>
            <div>
              <p class="text-sm text-gray-500 uppercase tracking-wider mb-1">Year Established</p>
              <p class="text-gray-900">2024</p>
            </div>
          </div>
        </section>

        <!-- Management -->
        <section>
          <h2 class="text-2xl font-semibold text-gray-900 mb-6">Management</h2>
          <div class="bg-gray-50 rounded-xl p-6">
            <div>
              <p class="text-sm text-gray-500 uppercase tracking-wider mb-1">Managing Director (Gérant)</p>
              <p class="text-lg font-semibold text-gray-900">Sid-Ali Temkit</p>
            </div>
          </div>
        </section>

        <!-- Contact Information -->
        <section>
          <h2 class="text-2xl font-semibold text-gray-900 mb-6">Contact Information</h2>
          <div class="bg-gray-50 rounded-xl p-6 space-y-4">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <p class="text-sm text-gray-500 uppercase tracking-wider mb-1">General Inquiries</p>
                <p class="text-gray-900">
                  <a href="mailto:contact@yet.lu" class="text-primary-600 hover:underline">contact@yet.lu</a>
                </p>
              </div>
              <div>
                <p class="text-sm text-gray-500 uppercase tracking-wider mb-1">Support</p>
                <p class="text-gray-900">
                  <a href="mailto:support@yet.watch" class="text-primary-600 hover:underline">support@yet.watch</a>
                </p>
              </div>
              <div>
                <p class="text-sm text-gray-500 uppercase tracking-wider mb-1">Privacy & Data Protection</p>
                <p class="text-gray-900">
                  <a href="mailto:privacy@yet.lu" class="text-primary-600 hover:underline">privacy@yet.lu</a>
                </p>
              </div>
              <div>
                <p class="text-sm text-gray-500 uppercase tracking-wider mb-1">Legal Matters</p>
                <p class="text-gray-900">
                  <a href="mailto:legal@yet.lu" class="text-primary-600 hover:underline">legal@yet.lu</a>
                </p>
              </div>
            </div>
            <div class="pt-4 border-t border-gray-200">
              <p class="text-sm text-gray-500 uppercase tracking-wider mb-1">Phone</p>
              <p class="text-gray-900">
                <a href="tel:+352621436580" class="text-primary-600 hover:underline">+352 621 436 580</a>
              </p>
            </div>
          </div>
        </section>

        <!-- Content Responsibility -->
        <section>
          <h2 class="text-2xl font-semibold text-gray-900 mb-6">Content Responsibility</h2>
          <div class="bg-gray-50 rounded-xl p-6">
            <p class="text-gray-700 mb-4">
              Responsible for the content of this website according to § 55 Abs. 2 RStV and applicable Luxembourg and EU law:
            </p>
            <div>
              <p class="font-semibold text-gray-900">Sid-Ali Temkit</p>
              <p class="text-gray-700">15 Avenue Dr Klein</p>
              <p class="text-gray-700">5630 Mondorf-les-Bains, Luxembourg</p>
            </div>
          </div>
        </section>

        <!-- Regulatory Authority -->
        <section>
          <h2 class="text-2xl font-semibold text-gray-900 mb-6">Regulatory Authority</h2>
          <div class="bg-gray-50 rounded-xl p-6">
            <p class="text-gray-700 mb-4">The company is registered with:</p>
            <div>
              <p class="font-semibold text-gray-900">Registre de Commerce et des Sociétés (RCS)</p>
              <p class="text-gray-700">Luxembourg Business Registers</p>
              <p class="text-gray-700 mt-2">
                Website: <a href="https://www.lbr.lu" target="_blank" rel="noopener" class="text-primary-600 hover:underline">www.lbr.lu</a>
              </p>
            </div>
          </div>
        </section>

        <!-- Online Dispute Resolution -->
        <section>
          <h2 class="text-2xl font-semibold text-gray-900 mb-6">Online Dispute Resolution</h2>
          <div class="bg-gray-50 rounded-xl p-6">
            <p class="text-gray-700 mb-4">
              In accordance with EU Regulation No. 524/2013, we inform you that the European Commission provides an Online Dispute Resolution (ODR) platform:
            </p>
            <p class="mb-4">
              <a href="https://ec.europa.eu/consumers/odr" target="_blank" rel="noopener" class="text-primary-600 hover:underline font-medium">
                ec.europa.eu/consumers/odr
              </a>
            </p>
            <div class="bg-amber-50 border border-amber-200 rounded-lg p-4">
              <p class="text-amber-800 text-sm">
                <strong>Note:</strong> We are not obligated and generally not willing to participate in dispute resolution proceedings before a consumer arbitration board. However, we are committed to resolving any disputes directly with our customers. Please contact us at <a href="mailto:legal@yet.lu" class="underline">legal@yet.lu</a> before initiating any formal proceedings.
              </p>
            </div>
          </div>
        </section>

        <!-- Products and Services -->
        <section>
          <h2 class="text-2xl font-semibold text-gray-900 mb-6">Products & Services</h2>
          <div class="bg-gray-50 rounded-xl p-6">
            <p class="text-gray-700 mb-4">This website (yet.watch) is operated by Yet Another Artificial Intelligence Company (SARL-S) and provides:</p>
            <ul class="list-disc list-inside text-gray-700 space-y-2">
              <li><strong>Yet.Project</strong> - AI-Native Project Management Platform</li>
              <li>API services for project management integration</li>
              <li>MCP (Model Context Protocol) server for AI assistants</li>
              <li>Related documentation and support services</li>
            </ul>
            <p class="text-gray-700 mt-4">
              Parent company website: <a href="https://yet.lu" target="_blank" rel="noopener" class="text-primary-600 hover:underline">yet.lu</a>
            </p>
          </div>
        </section>

        <!-- Copyright Notice -->
        <section>
          <h2 class="text-2xl font-semibold text-gray-900 mb-6">Copyright Notice</h2>
          <div class="bg-gray-50 rounded-xl p-6">
            <p class="text-gray-700">
              © {new Date().getFullYear()} Yet Another Artificial Intelligence Company (SARL-S). All rights reserved.
            </p>
            <p class="text-gray-700 mt-4">
              The content and works created by the operators on these pages are subject to Luxembourg and EU copyright law. Reproduction, editing, distribution, and any kind of use outside the limits of copyright law require the written consent of the respective author or creator.
            </p>
          </div>
        </section>

        <!-- Liability Disclaimer -->
        <section>
          <h2 class="text-2xl font-semibold text-gray-900 mb-6">Liability Disclaimer</h2>
          <div class="bg-gray-50 rounded-xl p-6 space-y-4">
            <div>
              <h3 class="font-semibold text-gray-900 mb-2">Content Liability</h3>
              <p class="text-gray-700">
                The content of our pages was created with great care. However, we cannot guarantee the accuracy, completeness, or timeliness of the content. As a service provider, we are responsible for our own content on these pages in accordance with general laws. However, we are not obligated to monitor transmitted or stored third-party information or to investigate circumstances that indicate illegal activity.
              </p>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 mb-2">Link Liability</h3>
              <p class="text-gray-700">
                Our website contains links to external websites of third parties over whose content we have no influence. Therefore, we cannot assume any liability for this external content. The respective provider or operator of the linked pages is always responsible for the content of the linked pages. The linked pages were checked for possible legal violations at the time of linking. Illegal content was not recognizable at the time of linking.
              </p>
            </div>
          </div>
        </section>

        <!-- Related Legal Documents -->
        <section>
          <h2 class="text-2xl font-semibold text-gray-900 mb-6">Related Legal Documents</h2>
          <div class="grid md:grid-cols-3 gap-4">
            <a href="/privacy" class="bg-gray-50 rounded-xl p-6 hover:bg-gray-100 transition-colors group">
              <div class="text-primary-600 mb-2">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">Privacy Policy</h3>
              <p class="text-sm text-gray-600 mt-1">How we handle your data</p>
            </a>
            <a href="/terms" class="bg-gray-50 rounded-xl p-6 hover:bg-gray-100 transition-colors group">
              <div class="text-primary-600 mb-2">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">Terms of Service</h3>
              <p class="text-sm text-gray-600 mt-1">Rules for using our services</p>
            </a>
            <a href="/cookies" class="bg-gray-50 rounded-xl p-6 hover:bg-gray-100 transition-colors group">
              <div class="text-primary-600 mb-2">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">Cookie Policy</h3>
              <p class="text-sm text-gray-600 mt-1">Our use of cookies</p>
            </a>
          </div>
        </section>

      </div>
    </div>
  </main>

  <Footer />
</Layout>
