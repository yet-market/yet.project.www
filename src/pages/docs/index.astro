---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const sections = [
  {
    title: 'Getting Started',
    items: [
      { title: 'Introduction', href: '/docs/intro', description: 'What is Yet.Project and how it works' },
      { title: 'Quick Start', href: '/docs/quickstart', description: 'Get up and running in 5 minutes' },
      { title: 'Concepts', href: '/docs/concepts', description: 'Tenants, projects, tasks, and more' },
    ],
  },
  {
    title: 'Web App',
    items: [
      { title: 'Projects', href: '/docs/app/projects', description: 'Creating and managing projects' },
      { title: 'Tasks', href: '/docs/app/tasks', description: 'Task management, Kanban, dependencies' },
      { title: 'Team', href: '/docs/app/team', description: 'Inviting members, roles, permissions' },
      { title: 'API Keys', href: '/docs/app/api-keys', description: 'Generating and managing API keys' },
      { title: 'Knowledge Base', href: '/docs/app/knowledge', description: 'Storing context for AI agents' },
    ],
  },
  {
    title: 'REST API',
    items: [
      { title: 'Authentication', href: '/docs/api/auth', description: 'API key authentication' },
      { title: 'Tasks', href: '/docs/api/tasks', description: 'Task endpoints' },
      { title: 'Projects', href: '/docs/api/projects', description: 'Project endpoints' },
      { title: 'Knowledge', href: '/docs/api/knowledge', description: 'Knowledge base endpoints' },
      { title: 'Rate Limits', href: '/docs/api/rate-limits', description: 'API rate limiting' },
    ],
  },
  {
    title: 'CLI',
    items: [
      { title: 'Installation', href: '/docs/cli/install', description: 'Installing the CLI' },
      { title: 'Commands', href: '/docs/cli/commands', description: 'All available commands' },
      { title: 'Git Integration', href: '/docs/cli/git', description: 'Linking branches to tasks' },
    ],
  },
  {
    title: 'Integrations',
    items: [
      { title: 'Claude Code', href: '/docs/integrations/claude', description: 'Using with Claude Code' },
      { title: 'Cursor', href: '/docs/integrations/cursor', description: 'Using with Cursor IDE' },
      { title: 'MCP Server', href: '/docs/integrations/mcp', description: 'Model Context Protocol (coming soon)' },
    ],
  },
];
---

<Layout title="Documentation">
  <Header />

  <main class="pt-24 pb-16 px-6">
    <div class="max-w-6xl mx-auto">
      <div class="mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Documentation</h1>
        <p class="text-xl text-gray-600">
          Learn how to use Yet.Project and integrate it with your AI tools.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sections.map(section => (
          <div>
            <h2 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b border-gray-200">
              {section.title}
            </h2>
            <ul class="space-y-4">
              {section.items.map(item => (
                <li>
                  <a href={item.href} class="block group">
                    <span class="text-gray-900 group-hover:text-primary-600 font-medium transition-colors">
                      {item.title}
                    </span>
                    <p class="text-sm text-gray-500 mt-1">{item.description}</p>
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>

      <!-- Quick Links -->
      <div class="mt-16 p-8 bg-gray-50 rounded-2xl">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Quick Links</h2>
        <div class="grid sm:grid-cols-3 gap-4">
          <a href="https://github.com/yet-market/yet.project" class="flex items-center gap-3 p-4 bg-white rounded-xl hover:shadow-md transition-shadow">
            <svg class="w-6 h-6 text-gray-700" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
            <span class="font-medium text-gray-900">GitHub</span>
          </a>
          <a href="https://app.yet.watch" class="flex items-center gap-3 p-4 bg-white rounded-xl hover:shadow-md transition-shadow">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/></svg>
            <span class="font-medium text-gray-900">Web App</span>
          </a>
          <a href="https://www.npmjs.com/package/@yet/cli" class="flex items-center gap-3 p-4 bg-white rounded-xl hover:shadow-md transition-shadow">
            <svg class="w-6 h-6 text-red-600" viewBox="0 0 24 24" fill="currentColor"><path d="M0 7.334v8h6.666v1.332H12v-1.332h12v-8H0zm6.666 6.664H5.334v-4H3.999v4H1.335V8.667h5.331v5.331zm4 0v1.336H8.001V8.667h5.334v5.332h-2.669v-.001zm12.001 0h-1.33v-4h-1.336v4h-1.335v-4h-1.33v4h-2.671V8.667h8.002v5.331z"/></svg>
            <span class="font-medium text-gray-900">npm</span>
          </a>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
